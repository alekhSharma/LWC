<aura:component implements="flexipage:availableForAllPageTypes" access="global" >
    <aura:attribute name="totalClassCount" type="Integer" default="0"/>
    <aura:attribute name="totalTriggersCount" type="Integer" default="0" />
    <aura:attribute name="listAllMethodsChart" type="List" />
    
    <ltng:require scripts="{!$Resource.UCD_charts_js}" afterScriptsLoaded="{!c.generateChart}"/>
    <div class="slds-col slds-size_12">
        <div class="slds-col slds-size_6" style="float: left;margin-left: 50px;">
            <label class="slds-text-heading_large" style="width:50%;">Org Info Pie Chart</label>
            <div class="slds-box">
                <canvas aura:id="piechartOrgInfo" height="300" width="450"></canvas>
            </div>
        </div>
        <div class="slds-col slds-size_6" style="float: right;margin-right: 50px;">
            <label class="slds-text-heading_large" style="width:50%;">Used/Unused Method Pie Chart</label>
            <div class="slds-box">
                <canvas aura:id="piechartMethodDetails" height="300" width="450"></canvas>
            </div>	
        </div>
    </div>
</aura:component>